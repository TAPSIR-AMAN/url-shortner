<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <%- include('../partial/header') %>

    <div class="change-password-page">

        <% if (user) { %>
            <div class="cp-alert cp-alert-success">
                <i class="fa-solid fa-circle-check"></i>
                You are logged in
            </div>
            <% } %>



                <div class="cp-card">

                    <h2 class="cp-title">Set Your Password</h2>
                    <div class="cp-line"></div>

                    <form action="/set-password" method="POST">

                       
                        <!-- New Password -->
                        <div class="cp-input-group">
                            <i class="fa-solid fa-lock cp-icon"></i>
                            <input type="password" name="newPassword" placeholder="Enter your new password">
                            <i class="fa-solid fa-eye cp-toggle"></i>
                        </div>

                        <!-- Rules -->
                        <div class="cp-rules">
                            <p>Password must:</p>
                            <ul>
                                <li>Be at least 8 characters long</li>
                                <li>Contain a number</li>
                                <li>Include uppercase and lowercase letters</li>
                            </ul>
                        </div>

                        <!-- Confirm Password -->
                        <div class="cp-input-group">
                            <i class="fa-solid fa-lock cp-icon"></i>
                            <input type="password" name="confirmPassword" placeholder="Confirm your new password">
                            <i class="fa-solid fa-eye cp-toggle"></i>
                        </div>
                        <% if (errors && errors.length> 0) { %>
                            <% errors.forEach(err=> { %>
                                <div class="cp-error-box">
                                    <%= err %>
                                </div>
                                <% }) %>
                                    <% } %>
                                        <button class="cp-btn" type="submit">Set Password</button>
                    </form>

                </div>

    </div>
      <%- include('../partial/footer') %>
    <script>
        document.querySelectorAll(".cp-toggle").forEach((toggle) => {
            toggle.addEventListener("click", () => {
                const parent = toggle.closest(".cp-input-group");
                const input = parent.querySelector("input");

                if (input.type === "password") {
                    input.type = "text";
                    toggle.classList.remove("fa-eye");
                    toggle.classList.add("fa-eye-slash");
                } else {
                    input.type = "password";
                    toggle.classList.remove("fa-eye-slash");
                    toggle.classList.add("fa-eye");
                }
            });
        });
    </script>
</body>

</html>